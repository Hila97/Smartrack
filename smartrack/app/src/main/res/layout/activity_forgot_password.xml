<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#BABABA"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="196dp"
                android:layout_marginEnd="8dp"
                android:text="Forgot Your Password?"
                android:textColor="#131313"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/activity_forgetPassword_btn_send"
                android:layout_width="293dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="220dp"
                android:background="@drawable/buttom_forget_pass"
                android:text="Reset Password"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@color/purple_200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/activity_forgetPassword_inputMail"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/activity_forgetPassword_inputMail"
                app:layout_constraintTop_toBottomOf="@+id/activity_forgetPassword_inputMail" />

            <EditText
                android:id="@+id/activity_forgetPassword_inputMail"
                android:layout_width="289dp"
                android:layout_height="70dp"
                android:layout_marginTop="81dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/forget_password_input"
                android:ems="10"
                android:hint="Enter Email"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:paddingStart="20dp"
                app:layout_constraintBottom_toTopOf="@+id/activity_forgetPassword_btn_send"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>