<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgetpas"
    tools:context=".ForgotPasswordActivity">

    <EditText
        android:id="@+id/activity_forgetPassword_inputMail"
        android:layout_width="261dp"
        android:layout_height="51dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/forget_password_input"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_forgetPassword_btn_send"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttom_forget_pass"
        android:text="SEND"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintEnd_toEndOf="@+id/activity_forgetPassword_inputMail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_forgetPassword_inputMail"
        app:layout_constraintTop_toBottomOf="@+id/activity_forgetPassword_inputMail" />


</androidx.constraintlayout.widget.ConstraintLayout>